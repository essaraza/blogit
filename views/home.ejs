    <%- include("partials/header") -%>
    <h1>What is Blogit?</h1>
    <p>
        <%= homeStartingContent %>
            <a href="/compose">Get started!</a>
    </p>
    <a class="d-grid gap-2 pt-3 pb-4" href="/compose">
        <button class="btn btn-outline-info" type="button">
                Compose your own blog!
        </button>
    </a>
    <div class="row row-cols-md-1 row-cols-lg-3 g-4">
        <% posts.forEach(function(post){ %>
            <div class="col">
                <div class="card shadow border-info h-100">
                    <div class="card-body">
                        <div class="container p-0">
                            <div class="row p-0">
                                <div class="col-8 px-3">
                                    <h4 class="card-title text-start">
                                        <%= post.titleInput %>
                                    </h4>
                                </div>
                                <div class="col-4">
                                    <p class="text-muted text-end"><%= post.timeStamp %></p>
                                </div>
                            </div>
                        </div>
                        <p class="card-text">
                            <%= post.blogInput.substring(0, 200) + "... " %>
                        </p>
                    </div>
                    <a href="/posts/<%= post.titleInput.replace(" ", " -")%>">
                        <div class="card-footer">
                            Read More
                        </div>
                    </a>
                </div>
            </div>
            <% }) %>
    </div>
    <a class="d-grid gap-2 pt-4 pb-3" href="/compose">
            <button class="btn btn-outline-info" type="button">
                    Compose your own blog!
            </button>
        </a>
</body>
</html>